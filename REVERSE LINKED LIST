class Node:
    def __init__(self, data):
        self.data = data
        self.next = None

class LinkedList:
    def __init__(self):
        self.head = None


ll = LinkedList()
ll.head = Node(10)
ll.head.next = Node(20)
ll.head.next.next = Node(30)
ll.head.next.next.next = Node(40)


prev = None
curr = ll.head

while curr:
    next_node = curr.next
    curr.next = prev
    prev = curr
    curr = next_node

ll.head = prev

temp = ll.head
while temp:
    print(temp.data, end=" -> ")
    temp = temp.next
print("None")
